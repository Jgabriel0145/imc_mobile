<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="imc.MainPage">

    <StackLayout BackgroundColor="#6495ED">
        <Label Text="Digite seu peso:" TextColor="White" FontSize="25" Margin="7"></Label>
        <Entry x:Name="txt_peso" TextColor="#F0F8FF" Margin="2" Keyboard="Numeric"></Entry>
        
        <Label Text="Digite sua altura" TextColor="White" FontSize="25" Margin="7"></Label>
        <Entry x:Name="txt_altura" TextColor="#F0F8FF" Margin="2" Keyboard="Numeric"></Entry>
        
        <Button Clicked="Button_Clicked" Text="Calcular IMC" TextColor="White" 
                FontSize="20" BackgroundColor="#4169E1" BorderColor="White" 
                CornerRadius="25"></Button>
        
        <Label x:Name="texto_imc" Text="" TextColor="White" FontSize="25" Margin="7"></Label>
        <Label x:Name="tabela" Text="" TextColor="White" FontSize="25" Margin="7"></Label>

        <Label x:Name="referencia" Text="" TextColor="White" FontSize="25" Margin="7"/>


    </StackLayout>

</ContentPage>
